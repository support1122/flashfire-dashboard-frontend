# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/flashfire?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Crypto Configuration
CRYPTO_ALGORITHM=aes-256-cbc
CRYPTO_AES_SECRET_SECRET_KEY=your-32-character-crypto-secret-key-here
CRYPTO_IV_LENGTH=16

# Server Configuration
PORT=8001
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
CLOUDINARY_UPLOAD_PRESET=your-cloudinary-upload-preset

# Frontend Configuration
VITE_API_BASE_URL=https://your-backend-api.com
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_CLOUD_PRESET=your-cloudinary-upload-preset
VITE_CLOUDINARY_CLOUD_PRESET_PDF=your-cloudinary-pdf-preset

# Optional: OpenAI Configuration
VITE_OPENAI_API_KEY=your-openai-api-key

# Optional: Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
